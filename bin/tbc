#!/bin/bash

# shellcheck source=/dev/null
source "$HOME/bin/.functions.sh"

function getinfo {
    os_info
    echo
    system_info
}

function buildit {
    case "$1" in
        matterhorn)
            echo "matterhorn";
            ;;
        *)
            echo 'syntax';
            ;;
    esac
}

function core_syntax {
    echo "Usage: $0 [info|install|remove|bench|update|build]"
    echo
    echo "info              display system information"
    echo "install <pkg>     install <pkg>"
    echo "remove <pkg>      remove <pkg>"
    echo "bench             benchmark system via docker image"
    echo "update            update the OS"
    echo "build             <in progress>"
    echo
}

case "$1" in
    cmd)
        echo 'cmd'
        ;;
    info)
        getinfo
        ;;
    install)
        shift
        package_install "$*"
        ;;
    remove)
        shift
        package_remove "$*"
        ;;
    bench)
        benchmark
        ;;
    update)
        system_update
        command_update
        ;;
    # building custom software
    build)
        shift
        buildit "$*"
        ;;
    *)
        core_syntax
        ;;
esac
